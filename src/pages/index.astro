import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="首页">
    <!-- 把你原来 index.html 文件里 <div class="content"> 里的独特内容复制到这里 -->
    <header>
        <h1>欢迎来到 MOLIFULAN 的博客!</h1>
    </header>

    <main>
        <section class="intro">
            <p>这里是分享想法、技术、还有一些碎碎念的地方~ (ﾉ´ヮ´)ﾉ*:･ﾟ✧</p>
        </section>

        <section id="latest-posts">
            <h2>🌟 最新文章 🌟</h2>
            <!-- 省略你的文章预览HTML，直接复制粘贴进来就行 -->
            <!-- ...你的 post-preview divs... -->
        </section>
    </main>
    
    <!-- 你原来的页脚部分可以保留，或者使用布局里的统一页脚 -->
    <div class="links-container">
        <!-- ...你的友情链接... -->
    </div>
